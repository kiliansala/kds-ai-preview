{
  "name": "@kds/web-components",
  "version": "0.1.0",
  "description": "Web Components built with LIT for Kapsch Design System",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tokens.css": "./src/tokens.css"
  },
  "files": [
    "dist",
    "custom-elements.json"
  ],
  "scripts": {
    "copy:tokens": "cp ../tokens/dist/tokens.css src/tokens.css",
    "dev": "npm run copy:tokens && vite",
    "validate": "tsx ../../scripts/validate-button-contract.ts",
    "validate:a11y": "tsx ../../scripts/validate-button-a11y.ts",
    "validate:docs": "tsx ../../scripts/validate-docs-page.ts",
    "validate:docs:button": "tsx ../../scripts/validate-docs-page.ts button",
    "validate:docs:checkbox": "tsx ../../scripts/validate-docs-page.ts checkbox",
    "validate:docs:toggle": "tsx ../../scripts/validate-docs-page.ts toggle",
    "validate:docs:tooltip": "tsx ../../scripts/validate-docs-page.ts tooltip",
    "validate:docs:badge": "tsx ../../scripts/validate-docs-page.ts badge",
    "validate:docs:button-group": "tsx ../../scripts/validate-docs-page.ts button-group",
    "validate:docs:input-field": "tsx ../../scripts/validate-docs-page.ts input-field",
    "fix:docs": "tsx ../../scripts/fix-docs-page.ts",
    "fix:docs:button": "tsx ../../scripts/fix-docs-page.ts button",
    "fix:docs:checkbox": "tsx ../../scripts/fix-docs-page.ts checkbox",
    "fix:docs:toggle": "tsx ../../scripts/fix-docs-page.ts toggle",
    "fix:docs:tooltip": "tsx ../../scripts/fix-docs-page.ts tooltip",
    "fix:docs:badge": "tsx ../../scripts/fix-docs-page.ts badge",
    "fix:docs:button-group": "tsx ../../scripts/fix-docs-page.ts button-group",
    "fix:docs:input-field": "tsx ../../scripts/fix-docs-page.ts input-field",
    "validate:all": "npm run validate && npm run validate:a11y",
    "build": "npm run copy:tokens && npm run validate:all && vite build && rm -f tsconfig.tsbuildinfo && tsc --emitDeclarationOnly --declarationDir dist",
    "build:docs": "npm run copy:tokens && vite build --config vite.docs.config.ts",
    "preview": "vite preview",
    "analyze": "wca analyze 'src/**/*.ts' --outFile custom-elements.json"
  },
  "dependencies": {
    "lit": "^3.1.2"
  },
  "devDependencies": {
    "@kds/tokens": "*",
    "marked": "^17.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "web-component-analyzer": "^2.0.0"
  }
}
