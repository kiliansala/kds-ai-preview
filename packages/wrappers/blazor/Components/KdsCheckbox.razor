@*
    @package @kds/blazor
    @component KdsCheckbox
    @description Blazor component wrapper for kds-checkbox web component
*@

@namespace Kds.Blazor.Components
@inject IJSRuntime JS

<kds-checkbox
    @ref="checkboxElement"
    size="@Size"
    checked="@(Checked ? "" : null)"
    indeterminate="@(Indeterminate ? "" : null)"
    disabled="@(Disabled ? "" : null)"
    error="@(Error ? "" : null)"
    name="@Name"
    value="@Value"
    required="@(Required ? "" : null)"
    aria-label="@AriaLabel"
    aria-describedby="@AriaDescribedBy">
    @ChildContent
</kds-checkbox>

@code {
    private ElementReference checkboxElement;
    private DotNetObjectReference<KdsCheckbox>? objRef;

    /// <summary>
    /// Checkbox size
    /// </summary>
    [Parameter]
    public string Size { get; set; } = "md";

    /// <summary>
    /// Whether the checkbox is checked
    /// </summary>
    [Parameter]
    public bool Checked { get; set; } = false;

    /// <summary>
    /// Whether the checkbox is in indeterminate state
    /// </summary>
    [Parameter]
    public bool Indeterminate { get; set; } = false;

    /// <summary>
    /// Disabled state
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; } = false;

    /// <summary>
    /// Error/invalid state
    /// </summary>
    [Parameter]
    public bool Error { get; set; } = false;

    /// <summary>
    /// Name attribute for form submission
    /// </summary>
    [Parameter]
    public string? Name { get; set; }

    /// <summary>
    /// Value attribute for form submission
    /// </summary>
    [Parameter]
    public string Value { get; set; } = "on";

    /// <summary>
    /// Required attribute for form validation
    /// </summary>
    [Parameter]
    public bool Required { get; set; } = false;

    /// <summary>
    /// ARIA label for accessibility
    /// </summary>
    [Parameter]
    public string? AriaLabel { get; set; }

    /// <summary>
    /// ARIA described-by for help text/error messages
    /// </summary>
    [Parameter]
    public string? AriaDescribedBy { get; set; }

    /// <summary>
    /// Child content (checkbox label text)
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Event callback when checkbox value changes
    /// </summary>
    [Parameter]
    public EventCallback<bool> OnChange { get; set; }

    /// <summary>
    /// Event callback when checkbox receives focus
    /// </summary>
    [Parameter]
    public EventCallback OnFocus { get; set; }

    /// <summary>
    /// Event callback when checkbox loses focus
    /// </summary>
    [Parameter]
    public EventCallback OnBlur { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            objRef = DotNetObjectReference.Create(this);
            await JS.InvokeVoidAsync("KdsBlazor.attachCheckboxListener", checkboxElement, objRef);
        }
    }

    [JSInvokable]
    public async Task HandleCheckboxChange(bool isChecked)
    {
        Checked = isChecked;
        await OnChange.InvokeAsync(isChecked);
    }

    [JSInvokable]
    public async Task HandleCheckboxFocus()
    {
        await OnFocus.InvokeAsync();
    }

    [JSInvokable]
    public async Task HandleCheckboxBlur()
    {
        await OnBlur.InvokeAsync();
    }

    public async ValueTask DisposeAsync()
    {
        if (objRef != null)
        {
            await JS.InvokeVoidAsync("KdsBlazor.detachCheckboxListener", checkboxElement);
            objRef.Dispose();
        }
    }
}
